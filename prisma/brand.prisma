model Brand {
    id          String   @id @default(uuid())
    name        String   @db.VarChar(100)
    slug        String   @unique
    description String?  @db.VarChar(255)
    image       String
    isActive    Boolean  @default(true)
    website     String?
    instagram   String?
    discount    Int?
    facebook    String?
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt

    products Product[]
}
